#include <iostream>

using namespace std;

int Matrix[8][8] = {0};
int contor = 64;

void afisare_matrice()
{
    for (int i = 0; i < 8; i++)
    {
        cout << "|";
        for (int j = 0; j < 8; j++)
            cout << Matrix[i][j] << "|";
        cout << "\n";
    }
    cout<<"\n\n\n";
}

bool este_valid(int i, int j)
{
    return (i >= 0 && i < 8 && j >= 0 && j < 8 && Matrix[i][j] == 0);
}

void pas(int i, int j)
{
    if (contor == 0)
        return;

    if (este_valid(i - 1, j - 2))
    {
        Matrix[i - 1][j - 2] = contor;
        contor--;
        afisare_matrice();
        pas(i - 1, j - 2);
    }
    else if (este_valid(i - 2, j - 1))
    {
        Matrix[i - 2][j - 1] = contor;
        contor--;
        afisare_matrice();
        pas(i - 2, j - 1);
    }
    else if (este_valid(i + 1, j - 2))
    {
        Matrix[i + 1][j - 2] = contor;
        contor--;
        afisare_matrice();
        pas(i + 1, j - 2);
    }
    else if (este_valid(i + 2, j - 1))
    {
        Matrix[i + 2][j - 1] = contor;
        contor--;
        afisare_matrice();
        pas(i + 2, j - 1);
    }
    else if (este_valid(i + 2, j + 1))
    {
        Matrix[i + 2][j + 1] = contor;
        contor--;
        afisare_matrice();
        pas(i + 2, j + 1);
    }
    else if (este_valid(i + 1, j + 2))
    {
        Matrix[i + 1][j + 2] = contor;
        contor--;
        afisare_matrice();
        pas(i + 1, j + 2);
    }
    else if (este_valid(i - 1, j + 2))
    {
        Matrix[i - 1][j + 2] = contor;
        contor--;
        afisare_matrice();
        pas(i - 1, j + 2);
    }
    else if (este_valid(i - 2, j + 1))
    {
        Matrix[i - 2][j + 1] = contor;
        contor--;
        afisare_matrice();
        pas(i - 2, j + 1);
    }

    contor--;
}

int main()
{
    pas(0, 0);
    afisare_matrice();
    return 0;
}

